@model IEnumerable<WhatShouldWePlayMVCNoAuth.Models.PlayerSummary>  
  
@{  
    ViewBag.Title = "Friends";  
}  
  
<div class="form-horizontal">  
  
    <hr />  
    <div class="form-group">  
  
  
        <table class="table table-responsive" style="width:400px">  
            <tr>  
                <th>  
                    @Html.DisplayNameFor(model => model.SteamID)  
                </th>  
                <th>  
                    @Html.DisplayNameFor(model => model.Avatar)  
                </th>
                <th>  
                    @Html.DisplayNameFor(model => model.PersonaName)
                </th>  
                  
            </tr>  
  
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" value="Model.ElementAt(i).SteamID"/>
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => Model.ElementAt(i).Avatar)" alt="@Html.DisplayNameFor(model => model.Avatar)"/> 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ElementAt(i).PersonaName)  
                    </td>
                </tr>
            }


        </table>
    </div>
</div>